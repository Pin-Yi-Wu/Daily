<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <!-- 顏色分類 -->
    <RelativeLayout
        android:id="@+id/type_color"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="3sp"
        android:background="@drawable/item_drawable" >

        <!-- 勾選 -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="123dp"
        android:layout_height="298dp"
        android:layout_margin="3sp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/1462974660_clothing_accesories_clothes_fabric-15"
        android:layout_weight="0.58">

        <!-- 標題 -->

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/Cancle" />

        <ImageView
            android:id="@+id/selected_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/selected_icon"
            android:visibility="invisible"
            android:background="@drawable/1462974596_ic_directions_bus_48px" />

        <!-- 日期時間 -->

    </LinearLayout>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/1462974584_Snacks_2" />

</LinearLayout>